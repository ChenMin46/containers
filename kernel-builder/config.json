{
    "version": "0.2.0",
    "platform": {
        "os": "linux",
        "arch": "x86_64"
    },
    "process": {
        "terminal": true,
        "user": {
            "uid": 0,
            "gid": 0
        },
        "args": [
            "bash"
        ],
        "env": [
            "PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
            "HOME=/root",
            "JOBS=4",
            "TERM=xterm"
        ],
        "cwd": "/root"
    },
    "root": {
        "path": "rootfs",
        "readonly": false
    },
    "hostname": "kernel-builder",
    "mounts": [
        {
            "name": "/usr/src",
            "path": "/usr/src"
        },
        {
            "name": "proc",
            "path": "/proc"
        },
        {
            "name": "dev",
            "path": "/dev"
        },
        {
            "name": "devpts",
            "path": "/dev/pts"
        },
        {
            "name": "shm",
            "path": "/dev/shm"
        },
        {
            "name": "mqueue",
            "path": "/dev/mqueue"
        },
        {
            "name": "sysfs",
            "path": "/sys"
        },
        {
            "name": "cgroup",
            "path": "/sys/fs/cgroup"
        },
        {
            "name": "/etc/hosts",
            "path": "/etc/hosts"
        },
        {
            "name": "/etc/resolv.conf",
            "path": "/etc/resolv.conf"
        }
    ],
    "linux": {
        "capabilities": [
            "CAP_CHOWN",
            "CAP_DAC_OVERRIDE",
            "CAP_FSETID",
            "CAP_FOWNER",
            "CAP_MKNOD",
            "CAP_NET_RAW",
            "CAP_SETGID",
            "CAP_SETUID",
            "CAP_SETFCAP",
            "CAP_SETPCAP",
            "CAP_NET_BIND_SERVICE",
            "CAP_SYS_CHROOT",
            "CAP_KILL",
            "CAP_AUDIT_WRITE"
        ]
    }
}