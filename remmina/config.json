{
    "ociVersion": "0.3.0-dev",
    "platform": {
        "os": "linux",
        "arch": "x86_64"
    },
    "process": {
        "terminal": false,
        "user": {
            "uid": 0,
            "gid": 0
        },
        "args": [
            "remmina"
        ],
        "env": [
            "DISPLAY=unix:0.0",
            "GDK_SCALE=2",
            "GDK_DPI_SCALE=0.5",
            "PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
        ],
        "cwd": "/"
    },
    "root": {
        "path": "rootfs",
        "readonly": false
    },
    "hostname": "remmina",
    "mounts": [
        {
            "name": "/etc/localtime",
            "path": "/etc/localtime"
        },
        {
            "name": "/tmp/.X11-unix",
            "path": "/tmp/.X11-unix"
        },
        {
            "name": "/root/.remmina",
            "path": "/root/.remmina"
        },
        {
            "name": "proc",
            "path": "/proc"
        },
        {
            "name": "dev",
            "path": "/dev"
        },
        {
            "name": "devpts",
            "path": "/dev/pts"
        },
        {
            "name": "shm",
            "path": "/dev/shm"
        },
        {
            "name": "mqueue",
            "path": "/dev/mqueue"
        },
        {
            "name": "sysfs",
            "path": "/sys"
        },
        {
            "name": "cgroup",
            "path": "/sys/fs/cgroup"
        },
        {
            "name": "/etc/hosts",
            "path": "/etc/hosts"
        },
        {
            "name": "/etc/resolv.conf",
            "path": "/etc/resolv.conf"
        }
    ],
    "linux": {
        "capabilities": [
            "CAP_CHOWN",
            "CAP_DAC_OVERRIDE",
            "CAP_FSETID",
            "CAP_FOWNER",
            "CAP_MKNOD",
            "CAP_NET_RAW",
            "CAP_SETGID",
            "CAP_SETUID",
            "CAP_SETFCAP",
            "CAP_SETPCAP",
            "CAP_NET_BIND_SERVICE",
            "CAP_SYS_CHROOT",
            "CAP_KILL",
            "CAP_AUDIT_WRITE"
        ]
    }
}